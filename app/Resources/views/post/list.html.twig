{% extends 'base.html.twig' %}

{% block page_header 'Listado de Posts' %}

{% block content %}

    <p>
        <a href="{{ path('post_create') }}" class="btn btn-primary">Crear Post</a>
    </p>

    <table class="table table-bordered">
        <thead>
        <tr>
            <th>ID</th>
            <th>Título</th>
            <th>Fecha Creación</th>
            <th>Fecha Edición</th>
            <th>Acciones</th>
        </tr>
        </thead>

        <tbody>
        {% for item in posts %}
            <tr>
                <td>{{ item.id }}</td>
                <td>{{ item.title }}</td>
                <td>{{ item.created|date }}</td>
                <td>{{ item.updated|date }}</td>
                <td><a href="{{ path('post_edit', {id: item.id}) }}">Editar</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="100">No hay posts creados</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock content %}
